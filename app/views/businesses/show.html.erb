<section class="top-block">
  <div>
    <h1><%= @business.name %></h1>
    <p>Location: <%= @business.city %>, <%= @business.state %></p>
    <p><%= @business.reviews.count %> reviews | <%= @business.category.name %> | Price Range: <%= @business.price_range %></p>
  </div>
</section>

<h2 style="text-align:center;">Recommended Reviews</h2>

<container>
<% @business.reviews.each do |r| %>
<div class="division">
  <p class="business-url"><strong><%=link_to r.customer.name, customer_reviews_path(r.customer) %></strong> <%=" wrote a review."%></p>
  <p>Rating: <%= r.rating %></p>
  <p><%= r.content %><br>
  </p>
</div>
<br>
<% end %>
</container>

<section class="options-block" style="background-color: #191919;">
  <br>
  <p><a class="options-url" href=<%= new_business_review_path(@business) %>><button class="options-btn">Start your review of <%= @business.name%>.</button></a></p>
</section>

<div class="push"></div>
