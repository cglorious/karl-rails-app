<container>
  <% @business.reviews.each do |r| %>
    <div class="division">
      <p class="business-url"> <img class="review-picture" src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="OctoCat">
        <strong><%=link_to r.customer.name, customer_reviews_path(r.customer) %></strong>
        <%=" wrote a review.  "%>
        |    Rating: <%= r.rating %></p>

      <p><%= r.content %></p>

        <% if current_user == r.customer %>
          <div class="url-edit"><%= link_to "Edit", edit_customer_review_path(current_user, r), :class => "edit-review" %></div>
        <% end %>

    </div><br>
  <% end %>
</container>
