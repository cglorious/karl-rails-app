<%= form_for :customer do |f| %>
  <%= f.label :email %><br>
  <div class="field-with-errors">
  <%= f.email_field :email, required: true %>
  </div>
<br>
  <%= f.label :password %><br>
<div class="field-with-errors">
  <%= f.password_field :password %>
</div>

<p><%= f.submit "Log in", :class => "submit-btn" %></p>

<% end %>
