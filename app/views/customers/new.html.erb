<!DOCTYPE html>
<html>
  <head>
    <style>
      <link rel="stylesheets" href="customers.scss">
    </style>
  </head>
<body>

  <div class="row">
    <div class="column">

      <h2 style="color:#D32323;">Sign Up for Reviewer</h2>
      <h4>Connect with great local businesses</h4>

      <%= render 'session/form' %>

      <%= form_for(@customer) do |f| %>
      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <br>
      <div>
        <%= f.label :email %><br>
        <%= f.email_field :email, required: true %>
      </div>
      <br>
      <div>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </div>
      <br>
      <div>
        <%= f.label :city %><br>
        <%= f.text_field :city %>
      </div>
      <br>
      <div>
        <%= f.label :state %><br>
        <%= f.text_field :state %>
      </div>
      <br>

        <p><%= f.submit "Sign Up" %></p>
      <% end %>
    </div>
    <div class="column">
      <br>
      <p><img src="https://s3-media0.fl.yelpcdn.com/assets/2/www/img/7922e77f338d/signup/signup_illustration.png"></p>
    </div>
    </div>

</body>
</html>
