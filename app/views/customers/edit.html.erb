<section class="top-block">
  <div>
    <h1>Something's changed?</h1>
    <p> Edit your profile, <%= @customer.name %>. </p>
  </div>
</section>

<section class="edit-customer">
  <%= form_for(@customer) do |f| %>
  <div>
    <%= f.label :name, :class => "form-label"%><br>
    <%= f.text_field :name, :class => "form-input" %>
  </div>
  <br>
  <div>
    <%= f.label :city, :class => "form-label" %><br>
    <%= f.text_field :city, :class => "form-input" %>
  </div>
  <br>
  <div>
    <%= f.label :state, :class => "form-label" %><br>
    <%= f.text_field :state, :class => "form-input" %>
  </div>
  <br>

  <div>
    <%= f.check_box :admin %> <%= f.label :admin, "Check box if you are a business owner" %>
  </div>
  <br>

  <div> <%= f.submit "Edit", :class => 'out-btn' %></div>

  <% end %>
</section>
