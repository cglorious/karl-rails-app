<%= form_for(@customer) do |f| %>
<div class="field_with_errors">
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<br>
<div class="field_with_errors">
  <%= f.label :email %><br>
  <%= f.email_field :email, required: true %>
</div>
<br>
<div class="field_with_errors">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
</div>
<br>
<div class="field_with_errors">
  <%= f.label :location %><br>
  <%= f.text_field :location %>
</div>
<br>

<p><%= f.submit "Sign Up", :class => "submit-btn"%></p>

<% end %>
